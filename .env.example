# MT5 Connector Configuration

# MT5 Terminal Settings
MT5_HOST=localhost
MT5_PORT=5555
MT5_TIMEOUT=30000
MT5_RECONNECT_INTERVAL=5000
MT5_MAX_RECONNECT_ATTEMPTS=10

# Security Settings
CURVE_SERVER_PUBLIC_KEY=
CURVE_SERVER_SECRET_KEY=
CURVE_CLIENT_PUBLIC_KEY=
CURVE_CLIENT_SECRET_KEY=
CONFIG_ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here

# ZeroMQ Settings
ZMQ_REQ_PORT=5555
ZMQ_PUB_PORT=5556
ZMQ_PUSH_PORT=5557
ZMQ_PULL_PORT=5558
ZMQ_DEALER_PORT=5559
ZMQ_ROUTER_PORT=5560

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/mt5-connector.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Performance
CONNECTION_POOL_SIZE=10
MESSAGE_BATCH_SIZE=100
MESSAGE_BATCH_TIMEOUT=1000
MEMORY_POOL_SIZE=1000
CACHE_TTL=300000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_PATH=/health

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_MONITOR_TIMEOUT=30000

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=10000
RETRY_BACKOFF_FACTOR=2

# Database (if using persistence)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mt5_connector
DB_USER=mt5_user
DB_PASSWORD=mt5_password
DB_SSL=false
DB_POOL_SIZE=10

# Redis (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Development Settings
NODE_ENV=development
DEBUG=mt5-connector:*
VERBOSE_LOGGING=true
ENABLE_MOCK_MT5=false

# Testing
TEST_MT5_HOST=localhost
TEST_MT5_PORT=5555
TEST_TIMEOUT=10000
TEST_PARALLEL_CONNECTIONS=5

# Production Settings (override in production)
# NODE_ENV=production
# LOG_LEVEL=warn
# VERBOSE_LOGGING=false
# METRICS_ENABLED=true
# HEALTH_CHECK_ENABLED=true